<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    android:orientation="vertical"
    tools:context=".RegisterFotoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/white"
        android:elevation="1dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Upload Foto KTP"
            android:fontFamily="@font/mukta"
            android:layout_weight="1"
           android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/uploadKTP"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:src="@drawable/fotodiri"
                />
            <ProgressBar
                android:id="@+id/ProgresKTP"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/white"
        android:elevation="1dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Upload Foto Diri"
            android:fontFamily="@font/mukta"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/uploadDiri"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/fotoktpdiri" />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressDiri"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/white"
        android:elevation="1dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Upload Foto Diri dan KTP"
            android:fontFamily="@font/mukta"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <ProgressBar
            android:id="@+id/progresupload"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/uploadDiridanKTP"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:src="@drawable/fotoktpdiri"
                />
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressDiridanKTP"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_button_login2"
        android:text="Selanjutnya"
        android:onClick="SyaratKetentuan"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/mukta"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>